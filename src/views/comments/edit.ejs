<%- include("../partials/header") %>
<div class="row">
    <main class="form-signin my-3">
        <form action="/fabrics/<%= fabric_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
            <h1 class="text-center h3 mb-3 fw-normal">Edit Comment</h1>
            <div class="form-floating">
                <input type="text" class="form-control" value="<%= comment.text %>" name="comment[text]" id="comment" placeholder="comment">
                <label for="comment">Comment</label>
            </div>
            <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">Submit</button>
        </form>
        <a href="/fabrics">Go back</a>
    </main>
</div>

<%- include("../partials/footer") %>