<%- include("../partials/header") %>

<div class="row">
    <div>
        <main class="form-signin my-3">
            <form action="/fabrics" method="POST" enctype="multipart/form-data">
                <h1 class="text-center h3 mb-3 fw-normal">Create a New Fabric</h1>
                <div class="form-floating">
                    <input type="text" class="form-control" id="name" name="fabric[name]" placeholder="name">
                    <label for="name">Name</label>
                </div>
                <div class="form-control">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
                    
                </div>
                <div class="form-floating">
                    <input type="number" class="form-control" id="cost" name="fabric[cost]" step="100" min="0" placeholder="cost">
                    <label for="cost">Cost</label>
                </div>
                <div class="form-floating">
                    <!-- <input type="text" class="form-control" id="description" name="fabric[description]" placeholder="description"> -->
                    <textarea class="form-control" name="fabric[description]" id="description" cols="60" rows="5" style="height:30%"></textarea>
                    <label for="description">Description</label>
                </div>
                <div class="form-floating">
                    <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">Submit</button>
                </div>

            </form>
            <a href="/fabrics">Go Back</a>
        </main>
    </div>
</div>

<%- include("../partials/footer") %>