<%- include("./partials/header") %>
<div class="row">
	<main class="form-signin mt-4">
		<form action="/reset/<%= token %>" method="POST">
		  <legend class="text-center h3 mb-3 fw-normal">Reset Password</legend>
		  <div class="form-floating">
			  <input type="password" class="form-control" name="password" value="" placeholder="New password">
			  <label for="password">New Password</label>
		  </div>
			
		
		  <div class="form-floating">
			  <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
			  <label for="confirm">Confirm Password</label>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="mt-3 w-100 btn btn-lg btn-primary">Update Password</button>
		  </div>
		</form>
	</main>
</div>

<%- include("./partials/footer") %>