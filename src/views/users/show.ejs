 <%- include("../partials/header") %> 
 
<div class="container-fluid "> 
	<div class="rol d-flex justify-content-center">
		<div class="col-md-8 mt-5 pt-5">
			<!-- box-shadow div -->
			<div class="row z-depth-3 shadow-lg mb-5 bg-body rounded">
				<div class="col-sm-4 bg-light  rounded-left">
					<div class="card-block text-center text-black">
						<i class="fas fa-user-tie fa-7x mt-5"><img src="<%= user.avatar %>" alt=""></i>
						<h2 class="fw-bold mt-4 text-capitalize"><%= user.fullName %></h2>
						<p><%= user.username%></p>
						<i class="far fa-edit fa-2x mb-4"></i>
					</div>
				</div>
				<div class="col-sm-8 bg-white rounded-right px-5">
					<h3 class="mt-3 text-center fw-bold ">Contact Information</h3>
					<div class="row mb-5 px-3">
						<div class="col-lg-6">
							<h4 class="fw-bold">Phone</h4>
							<h6 class="text-muted">[country code : e.g +234] <%= user.number %></h6>
						</div>
						<div class="col-lg-6">
							<h4 class="fw-bold">Email</h4>
							<h6 class=""><%= user.email %></h6>
						</div>
					</div>
					<hr class="bg-primary">
					<h4 class="mt-3 text-capitalize text-center fw-bold"><%= user.username %>'s fabrics</h4>
					<div class="row">
							<ul class="list-inline d-flex justify-content-center mt-4">
							<% fabrics.forEach(function(fabric) { %>
								<li class="list-inline-item list-group-item-action text-center px-2 text-capitalize "><a href="/fabrics/<%= fabric.id %>"> <%= fabric.name %></a></li>
							<% }); %>
							</ul>
						<!-- <div class="col-sm-6">
							<h4 class="fw-bold">Email</h4>
							<h6 class="text-muted">mustaphajay2@gmail.com</h6>
						</div> -->
					</div>
					<ul class="list-unstyled d-flex justify-content-center mt-4">
						<li><a href="<%= user.facebook %>"><i class="fab fa-facebook px-3 h4 icon "></i></a></li>
						<li><a href="<%= user.instagram %>"><i class="fab fa-instagram px-3 h4 icon "></i></a></li>
						
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
 
<%- include("../partials/footer") %> 